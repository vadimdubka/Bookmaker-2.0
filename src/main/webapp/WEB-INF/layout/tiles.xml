<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <!--Define a base tile-->
    <definition name="base" template="/layout/page.jsp">
        <put-attribute name="header" value="/layout/header.jsp"/>
        <put-attribute name="body" value=""/>
        <put-attribute name="footer" value="/layout/footer.jsp"/>
    </definition>

    <definition name="main" extends="base">
        <put-attribute name="body" value="/pages/main.jsp"/>
    </definition>

    <definition name="make_bet" extends="base">
        <put-attribute name="body" value="/pages/make_bet.jsp"/>
    </definition>

    <definition name="manage_players" extends="base">
        <put-attribute name="body" value="/pages/manage_players.jsp"/>
    </definition>

    <definition name="player_state" extends="base">
        <put-attribute name="body" value="/pages/player_state.jsp"/>
    </definition>

    <definition name="register" extends="base">
        <put-attribute name="body" value="/pages/register.jsp"/>
    </definition>

</tiles-definitions>